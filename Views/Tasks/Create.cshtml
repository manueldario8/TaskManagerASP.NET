@{
}

<form method="post" asp-action="Create">
    <div class="form-group row">
        <label asp-for="Title" class="col-sm-2 col-form-label">Task name</label>
        <div class="col-sm-10">
            <input asp-for="Title" class="form-control" placeholder="Task Name">
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
    </div><br />
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label">Task description</label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Task Description">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
    </div>
    <br />
    
    <br />
    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Summit task</button>
        </div>
    </div>
</form>